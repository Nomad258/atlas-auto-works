# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# IMPORTANT: Never commit your actual .env file to version control

# Client-side (accessible in browser via import.meta.env)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Server-side (Netlify Functions only)
OPENAI_API_KEY=your_openai_api_key_here

# Application Environment
VITE_APP_ENV=production

# Turso Database Configuration
VITE_TURSO_DATABASE_URL=libsql://your-db.turso.io
VITE_TURSO_AUTH_TOKEN=your-auth-token

# Optional: Rate limiting (requests per hour)
VITE_RATE_LIMIT_CHAT=100
VITE_RATE_LIMIT_IMAGES=50
VITE_RATE_LIMIT_RECOMMENDATIONS=200
